@* AddWorkout Page *@

@page
@model WorkoutTracker.Pages.AddWorkoutModel
@{
    <div class="container">
        <div class="mt-3">
            <form method="post">
                <div class="row">
                    <div class="col text-center">
                        <label style="color: white" for="Location">Location:</label>
                        <br />
                        <input type="text" name="Location" />
                    </div>
                    <div class="col text-center">
                        <label style="color: white" for="Date">Date:</label>
                        <br />
                        <input type="date" name="Date" />
                    </div>
                    <div class="col text-center">
                        Sun
                        <label style="color: white" for="AvgHeartRate">Average Heart Rate:</label>
                        <br />
                        <input type="text" name="AvgHeartRate" />
                    </div>
                </div>
                <div class="row">
                    <div class="col text-center">
                        <label style="color: white" for="StartTime">Start Time:</label>
                        <br />
                        <input type="time" name="StartTime" />
                    </div>
                    <div class="col text-center">
                        <label style="color: white" for="EndTime">End Time:</label>
                        <br />
                        <input type="time" name="EndTime" />
                    </div>
                    <div class="col text-center">
                        <label style="color: white" for="Duration">Workout Length:</label>
                        <br />
                        <input type="text" name="Duration" />
                    </div>
                </div>
                <div class="row">
                    <div class="col text-center">
                        <label style="color: white" for="Weight">Weight:</label>
                        <br />
                        <input type="text" name="Weight" />
                    </div>
                    <div class="col text-center">
                        <label style="color: white" for="SleepDuration">Sleep Duration:</label>
                        <br />
                        <input type="text" name="SleepDuration" />
                    </div>
                    <div class="col text-center">
                        <label style="color: white" for="Calories">Calories Eaten:</label>
                        <br />
                        <input type="text" name="Calories" />
                    </div>
                </div>

                <br />

                <div class="row ">
                    <div style="color: white" class="col text-center">
                        Were you inside?
                        <select data-val="true" data-val-required="The isIndoor field is required." id="isIndoor" name="isIndoor" value="@Model.IsIndoor">
                            <option selected="selected">Pick one</option>
                            <option value="0">Yes</option>
                            <option value="1">No</option>
                        </select>
                    </div>
                    <div style="color: white" class="col text-center">
                        Weather
                        <select data-val="true" data-val-required="The Weather field is required." id="Weather" name="Weather" value="@Model.WeatherType">
                            <option selected="selected">Pick one</option>
                            <option value="0">Sunny</option>
                            <option value="1">Rainy</option>
                            <option value="2">Clear</option>
                            <option value="3">Overcast</option>
                            <option value="4">Snowing</option>
                            <option value="5">Hurricane</option>
                        </select>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col text-center">
                        <label>&nbsp;</label>
                        <input type="submit" value="Submit" class="submit" @*onclick="history.back()"*@ /> @*commented out for testing*@
                    </div>
                </div>
            </form>
        </div>
    </div>
}
